<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=<device-width>, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/newgame_styles.css">
  <link href="https://api.mapbox.com/mapbox-gl-js/v2.4.1/mapbox-gl.css" rel="stylesheet">
<script src="https://api.mapbox.com/mapbox-gl-js/v2.4.1/mapbox-gl.js"></script>
  <title>New game</title>
</head>
<body>
  <div class="bg-image">
  <nav role="navigation">
    <div id="menuToggle">
        <!--
        A fake / hidden checkbox is used as click reciever,
        so you can use the :checked selector on it.
        -->
        <input type="checkbox" />
        
        <!--
        Some spans to act as a hamburger.
        
        They are acting like a real hamburger,
        not that McDonalds stuff.
        -->
        <span></span>
        <span></span>
        <span></span>

        
        <!--
        Too bad the menu has to be inside of the button
        but hey, it's pure CSS magic.
        -->
        
        <ul id="menu">
          <a href="/"><li>Home</li></a>
          <a href="/"><li>Profile</li></a>
          <a href="#"><li>About</li></a>
          <a href="#"><li>Info</li></a>
          <a href="#"><li>Contact</li></a>
          <a href="#"><li>Log out</li></a>
        </ul>
      </div>
    </nav>
    <div class="logo">
      <img src="/images/CheCityLogo.png" alt="logo">
    </div>
    <div class="form-map-container">

      <div class="new-game-form-div">
        <form class="new-game-form" action="/newgame" method="post">
          <div class="form-header">
            <h1>List a game!</h1>
          </div>
          <input id="hostname" type="text" name="hostname" placeholder="Your Name" required>
          <input id="gametype" type="text" name="gametype" placeholder="Game Type" required>
          <textarea id="description" type="text" name="description" placeholder="Description" maxlength="200" required></textarea>
          <input id="date" type="date" name="date" required>
          <input id="time" type="text" name="time" placeholder= "Time" required>
          <input id="address" type="text" name="address" placeholder="Address" required>
          <input type="submit" value="Submit">
        </form>
      </div>

      <div id="map-wrapper">
        <div id="map"></div>
      </div>
  </div>

  <script>
    mapboxgl.accessToken = 'pk.eyJ1Ijoib2NvZG5lci03IiwiYSI6ImNrdG9veWgxZDAyanUydm42dDdzZnR5OHYifQ.yfTVmCCSYLtrJrzaDAB-gg';
    const coordinates = document.getElementById('coordinates');
    const map = new mapboxgl.Map({
        container: 'map',
        style: 'mapbox://styles/mapbox/streets-v11',
        center: [0, 0],
        zoom: 3
    });

  const nav = new mapboxgl.NavigationControl();
  map.addControl(nav)
 
    map.on('click', (e) => {
        var pinDropCoords = e.lngLat;

        const marker = new mapboxgl.Marker({
            draggable: true
        })
            .setLngLat([`${pinDropCoords.lng}`, `${pinDropCoords.lat}`])
            .addTo(map);

        function onDragEnd() {
            const lngLat = marker.getLngLat();
            coordinates.style.display = 'block';
            coordinates.innerHTML = `Longitude: ${lngLat.lng}<br />Latitude: ${lngLat.lat}`;
        }
    })

    window.addEventListener('load', () => {
        map.fitBounds([
            [-7.57216793459, 49.959999905], // southwestern corner of the bounds
            [1.68153079591, 58.6350001085] // northeastern corner of the bounds
        ]);
    });

    marker.on('dragend', onDragEnd);
  </script>
</body>
</html>