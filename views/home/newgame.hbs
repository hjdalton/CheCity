        <span></span>
        <span></span>

        
        <!--
        Too bad the menu has to be inside of the button
        but hey, it's pure CSS magic.
        -->
        
        <ul id="menu">
          <a href="/"><li>Home</li></a>
          <a href="/"><li>Profile</li></a>
          <a href="#"><li>About</li></a>
          <a href="#"><li>Info</li></a>
          <a href="#"><li>Contact</li></a>
          <a href="#"><li>Log out</li></a>
        </ul>
      </div>
    </nav>
    <div class="logo">
      <img src="/images/CheCityLogo.png" alt="logo">
    </div>
    <div class="form-map-container">

      <div class="new-game-form-div">
        <form class="new-game-form" action="/newgame" method="post" onsubmit="hiddenValue()">
          <div class="form-header">
            <h1>List a game!</h1>
          </div>
          <input id="hostname" type="text" name="hostname" placeholder="Your Name" required>
          <input id="gametype" type="text" name="gametype" placeholder="Game Type" required>
          <textarea id="description" type="text" name="description" placeholder="Description" maxlength="200" required></textarea>
          <input id="date" type="date" name="date" required>
          <input id="time" type="text" name="time" placeholder= "Time" required>
          <div id="geocoder" class="geocoder"></div>
          <input id="hidden" type="hidden" name="address" value="">
          <input type="submit" value="Submit">
        </form>
        
      </div>


      <div id="map-wrapper">
        <div id="map"></div>
      </div>
  </div>

  <script src="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v4.7.2/mapbox-gl-geocoder.min.js"></script>
  <script>
  mapboxgl.accessToken = 'pk.eyJ1IjoiZHlsYW5wNjY2IiwiYSI6ImNrdHNoNmF6MzFnOHMydnBuanZxMnc4dTMifQ.SRL9nwRnusKiGOWVy6wIZA';
  const coordinates = document.getElementById('coordinates');
  const map = new mapboxgl.Map({
      container: 'map',
      style: 'mapbox://styles/dylanp666/cktsh77xt185e18o26jk5tcie',
      center: [0, 0],
      zoom: 3
  });

  const geocoder = new MapboxGeocoder({
    accessToken: mapboxgl.accessToken,
    mapboxgl: mapboxgl,
    countries: 'gb'
  });

  document.getElementById('geocoder').appendChild(geocoder.onAdd(map));

  function hiddenValue() {
    const address = document.getElementsByClassName('mapboxgl-ctrl-geocoder--input')[0].value;
    document.getElementById("hidden").value = address;
  }
  
  

  const nav = new mapboxgl.NavigationControl();
  map.addControl(nav)
 
