    {{!-- <nav class="signup"> 
     <div> 
       <a href="/user/login">Log in</a> 
       <a href="/user/signup">Sign Up</a>
      </div>
    </nav> --}}

  <div class="search_bar">
    <input type="text" placeholder="Search..">
    <img src="/images/CheCityLogoHome.png" alt="logo">
  </div> 
  {{!-- not functional --}}

  <div class="header">
    <h1 class="title" style="font-size: 3.5em;">CheCity</h1>
      <p style="font-size: 1.5em;">Welcome to CheCity</p>

      <h2>Here are some games!</h2>
  </div>

  
  
    <ul class="games">
      {{#each games}}

        <div class="game" id= {{this.gametype}}>
          Host: {{this.hostname}} <br>
          Game: {{this.gametype}} <br>
          Description: {{this.description}} <br>
          Date: {{this.date}} <br>
          Time: {{this.time}} <br>
          Address: {{this.address}} <br>
          Spaces: {{this.spaces}}
          <div id= "forms">

            <form class="button" name="delete-game-form" id="delete-game-form" action="/deletegame" method="post">
              <input id="id" type="hidden" name="id" value="{{this._id}}">
              <input type="submit" value="Delete">
            </form>

            <form class="button" name="book-game-form" id="book-game-form" action="/bookgame" method="post">
              <input id="id" type="hidden" name="id" value="{{this._id}}">
              <input class= "spaces" type= "hidden" value= "{{this.spaces}}">
              <input class= "bookButton" type="submit" value="Book">
            </form>

          </div>
        </div>
    </div>
      
      <br>
      <br>

    {{/each}}
  </ul>

<script>
  function disableButton() {
  let buttons = document.getElementsByClassName('bookButton');
  let spaces = document.getElementsByClassName('spaces'); 

  
  for (i = 0; i < (spaces.length); i++) {
    if (spaces[i].value === '0') {
      buttons[i].disabled = true;    
    } else {
      buttons[i].disabled = false;
    }
  }
}
disableButton() 
</script>
</body>
</html>
