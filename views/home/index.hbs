<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/index_styles.css">
  <title>CheCity</title>
</head>
<body>

<nav role="navigation">
    <div id="menuToggle">
        <input type="checkbox" />
        <span></span>
        <span></span>
        <span></span>

        <ul id="menu">
          <a href="/newgame"><li>New Game</li></a>
          <a href="/user/login"><li>Log In</li></a>
          <a href="/user/signup"><li>Sign Up</li></a>
          <a href="/user/logout"><li>Log out</li></a>
        </ul>
      </div>
    </nav>

  <div class="search_bar">
    <input type="text" placeholder="Search..">
    <img src="/images/CheCityLogoHome.png" alt="logo">
  </div> 
  {{!-- not functional --}}

  <div class="header">
    <h1 class="title" style="font-size: 3.5em;">CheCity</h1>
      <p style="font-size: 1.5em;">Welcome to CheCity</p>

      <h2>Here are some games!</h2>
  </div>

  <div class="filter">
    <label for="filtering">Choose a game:</label>

      <form id="gametype" name="game-options" action="/filter" method="post">
      <select>
        <option value="bullet-chess">Bullet Chess</option>
        <option value="chess2">Chess2</option>
        <option value="chess3">Chess3</option>
        <option value="chess4">Chess4</option>
      </select>
      <input type="submit" value="Filter">
      </form>
    </div>
  
    <ul class="games">
      {{#each games}}

        <div class="game" id= {{this.gametype}}>
          Host: {{this.hostname}} <br>
          Game: {{this.gametype}} <br>
          Description: {{this.description}} <br>
          Date: {{this.date}} <br>
          Time: {{this.time}} <br>
          Address: {{this.address}} <br>
          
          <div id= "forms">

            <form class="button" name="delete-game-form" id="delete-game-form" action="/deletegame" method="post">
              <input id="id" type="hidden" name="id" value="{{this._id}}">
              <input type="submit" value="Delete">
            </form>

          </div>
        </div>
    </div>
      
      <br>
      <br>

    {{/each}}
  </ul>


</body>
</html>
